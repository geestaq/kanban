{
  "name": "npm-init",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npm-run-all test:*",
    "test:html": "globstar nu-html-checker *.html",
    "init-project": "npm install && npm-run-all init:*",
    "init:dirs": "mkdirp sass sass/components sass/pages sass/sections css vendor images js",
    "init:files": "touch README.md index.html sass/style.scss sass/_variables.scss sass/_mixins.scss sass/_layout.scss js/script.js",
    "init:gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
    "init:normalize": "curl https://necolas.github.io/normalize.css/latest/normalize.css -o ./sass/_normalize.scss",
    "init:sass": "curl https://raw.githubusercontent.com/geestaq/html-sass-boilerplate/master/sass/style.scss -o ./sass/style.scss",
    "init:html": "curl https://raw.githubusercontent.com/geestaq/html-sass-boilerplate/master/index.html -o ./index.html",
    "init:gitignore-sass-cache": "echo .sass-cache >> .gitignore",
    "build": "npm-run-all -l build:* test",
    "build:clean": "rimraf css/*",
    "build:sass": "node-sass --output-style compact -o css sass",
    "build:autoprefixer": "autoprefixer-cli css/style.css",
    "build-dev:sass": "node-sass --output-style expanded --source-map true -o css sass",
    "watch": "npm-run-all -l build -p watch:*",
    "watch:sassprefixer": "onchange sass/* -- npm-run-all build-dev:sass build:autoprefixer",
    "watch:browsersync": "browser-sync start --server --files \"css/*.css\" \"js/*.js\" \"*.html\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "browser-sync": "^2.26.3",
    "globstar": "^1.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "nu-html-checker": "^0.1.0",
    "onchange": "^5.2.0",
    "rimraf": "^2.6.3",
    "superagent": "^4.1.0"
  }
}
